<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20, 20
            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput: 
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                password: True
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x':0.5, 'center_y':0.6}
            Label:
                id: login_wrong
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password?"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.forgot_pword()
            Button:
                text: "Sign Up"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sign up for a moment at peace"
        TextInput:
            id: username
            hint_text: "New Username"
        TextInput:
            id: password
            hint_text: "New Password"
        RelativeLayout:
            Button:
                text: "Click to sign up"
                on_press: root.add_user(root.ids.username.text,root.ids.password.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x':0.5, 'center_y':0.6}

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up succesful! Welcome."
        RelativeLayout: 
            Button:
                text: "Click to go and login"
                on_press: root.back_to_login()
                size_hint: 0.3, 0.5
                pos_hint: {'center_x':0.5, 'center_y':0.6}
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<ForgotPasswordScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Whats your username?"
        TextInput:
            id: username
            hint_text: "Your username"
        RelativeLayout:
            Button:
                text: "Check username"
                on_press: root.check_user(root.ids.username.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x':0.5, 'center_y':0.6}
        Label:
            id: no_user_id
            text: ""

<NewPasswordScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "User found!Enter new password"
        TextInput:
            id: new_password
            hint_text: "New password"
        RelativeLayout:
            Button:
                text: "Confirm new password"
                on_press: root.store_new_pword(root.ids.new_password.text)
                size_hint: 0.3, 0.5
                pos_hint: {'center_x':0.5, 'center_y':0.6}
                height: self.texture_size[0]
        


<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
        Label:
            text: "How do you feel?"
        TextInput:
            id: feeling
            hint_text: "Maybe you feel happy, sad, or unloved..."
        Button:
            text: "Enlighten Me"
            on_press: root.get_quote(root.ids.feeling.text) 
        ScrollView:#setting a scrollview parent with a label child    
            Label:
                id: quote
                text: ""
                text_size: self.width, None #setting the text size height to none will give the label more space to display the quote when squeezed
                size_hint_y: None #setting the default height of the label to 100 pixels
                height: self.texture_size[1]#texture size is a tuple that has(width of text, height of text) were setting the height of the label to change dynamically with the height of the text 

        

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    ForgotPasswordScreen:
        name: "forgot_password_screen"
    NewPasswordScreen:
        name: "new_password_screen"
    LoginScreenSuccess:
        name: "login_screen_success"
    
        



            


